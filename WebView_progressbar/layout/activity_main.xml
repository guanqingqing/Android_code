<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bway.webview_progressbar.act.MainActivity">

    <android.support.design.widget.TabLayout
        app:tabMode="scrollable"
        android:id="@+id/tablayout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:tabTextColor="#6B5547"
        app:tabSelectedTextColor="#6B5547"
        app:tabIndicatorColor="#6B5547"
        app:tabIndicatorHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCD9CF"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
